<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.chrysanthemum"
    >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application

        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="ExtraText">

        <activity
            android:name=".ui.dataView.DataDisplayActivity"
            android:label="@string/title_activity_data_display_avtivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.technicianLogin.TechnicianLoginActivity"
            android:label="@string/title_activity_technician_login"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.accessAuthentication.AppAuthenticationActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>